                      <%= link_to @user.attachment3_url.last(30), target: :_blank %>
                    <% end %>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6"><%= f.input :attachment4_name, label: 'Attachment 4', placeholder: "Attachment Name" %></div>
                  <div class="col-md-6"><br>
                    <%= f.file_field :attachment4 %>
                    <% if @user.attachment4? %>
                      <%= link_to @user.attachment4_url.last(30), target: :_blank %>
                    <% end %>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6"><%= f.input :attachment5_name, label: 'Attachment 5', placeholder: "Attachment Name" %></div>
