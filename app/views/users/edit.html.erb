                    <% end %>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6"><%= f.input :attachment10_name, label: 'Attachment 10', placeholder: "Attachment Name" %></div>
                  <div class="col-md-6"><br>
                    <%= f.file_field :attachment10 %>
                    <% if @user.attachment10? %>
                      <%= link_to @user.attachment10_url.last(30), target: :_blank %>
                    <% end %>
                  </div>
                </div>
    
                <hr>
                <%= f.input :group, required: true %>
                <% end %>
      
      
                <% if current_user.admin || [current_user.manager && current_user.support] %>        
                  Entrust&#63; <%= f.check_box :entrust? %> &nbsp; | &nbsp; 
                <% end %>
        
                <% if current_user.admin || [current_user.manager && current_user.support] %>        
                  Branch&#63; <%= f.check_box :branch? %> &nbsp; | &nbsp; 
                <% end %>
                <br>
                
                <% if current_user.admin %>
                  Admin&#63; <%= f.check_box :admin? %> &nbsp; | &nbsp; Manager&#63; <%= f.check_box :manager? %> &nbsp; | &nbsp; Support&#63; <%= f.check_box :support? %> &nbsp; | &nbsp; IntelaTek&#63; <%= f.check_box :intelatek? %>
                <% end %>


            </div>
            
          </div>

        
      </div>
    </div>
    
    
    
    <div class="panel-footer">
      <div class="form-actions">
        <%= f.button :submit, "Update", class:"btn btn-slate btn-block" %>
      </div>
      <% end %>
      <br>
      <em><div text align="center">Caution: Deleteing a user will delete all of their prospects and associated comments.</em></div>
  		<div class="links center">
    		<%= link_to "Back", :back, class: "btn btn-beige" %> &nbsp;&nbsp;
        <%= link_to "Delete User", user_path(@user), data: { confirm: "Caution: Deleteing a user will delete all of their prospects and associated comments." }, method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>