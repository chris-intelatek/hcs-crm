<div class="col-md-10 col-md-offset-1">
	<div class="panel panel-gray">
	  <div class="panel-heading">
			<h4>Edit/Update User</h4>
	  </div>
	  <div class="prospect-show">
      <%= simple_form_for @user, :html => {:multipart => true} do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        
        <div class="row">

          <div class="col-md-5 col-md-offset-1">
            <%= f.input :advisor_first_name, required: true, autofocus: true, label: 'First Name' %>
            <%= f.input :advisor_last_name, required: true, label: 'Last Name'  %>
            <%= f.input :advisor_company_name, label: 'Company Name' %>
            <%= f.input :advisor_phone, label: 'Phone'  %>
            <%= f.input :advisor_mobile, label: 'Mobile'  %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :mailing_address, label: 'Mailing Address'  %>
            <%= f.input :apt_suite, label: 'Apt/Suite #'  %>
            <%= f.input :city, label: 'City'  %>
            <%= f.input :state, collection: STATES %>
            <%= f.input :zip, label: 'ZipCode'  %>
            <%= f.input :password, autocomplete: "off", required: false %>
            <%= f.input :password_confirmation %>
          </div>

          <div class="col-md-5 col-md-offset-1">

            <% if current_user.admin || current_user.manager %>

        			<%= f.input :training_date, :include_blank => true, :default => nil,
        			    required: true, as: :date, html5: true, order: [:month, :day, :year], label: "Training Completed Date" %>
        			    
        			<%= f.input :business_plan_date, :include_blank => true, :default => nil,
        			    required: true, as: :date, html5: true, order: [:month, :day, :year], label: "Business Plan Scheculed/Completed Date" %>
              
                <div class="row">
                  <div class="col-md-6"><%= f.input :attachment1_name, label: 'Attachment 1', placeholder: "Attachment Name" %></div>
                  <div class="col-md-6"><br>
                    <%= f.file_field :attachment1 %> 
                    <% if @user.attachment1? %>      
                      <%= link_to @user.attachment1_url.last(30), target: :_blank %>
                    <% end %>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6"><%= f.input :attachment2_name, label: 'Attachment 2', placeholder: "Attachment Name" %></div>
                  <div class="col-md-6"><br>
                    <%= f.file_field :attachment2 %>
                    <% if @user.attachment2? %>      
