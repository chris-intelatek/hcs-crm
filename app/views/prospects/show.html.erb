<div class="col-md-10 col-md-offset-1">
  
	<div class="panel panel-gray">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-7">
        <p class="header-title"><%= @prospect.organization %></p>
      </div>
      <div class="col-md-5">
        <% if @prospect.hcs_prospect == false  %>
          <%= link_to "Add HealthCare Savings Service", hcs_path(@prospect), class: "btn btn-slate btn-sm" %>
        <% else %>
          <%= link_to "Edit HealthCare Savings Service", hcs_path(@prospect), class: "btn btn-warning btn-sm" %>
        <% end %>
        &nbsp; &nbsp;
        <% if @prospect.pay_prospect == false %>
          <%= link_to "Add Instant Payments Service", pay_path(@prospect), class: "btn btn-slate btn-sm" %>
        <% else %>
          <%= link_to "Edit Instant Payments Service", pay_path(@prospect), class: "btn btn-warning btn-sm" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12"><p class="prospect-posted-by"><em>Prospect created on
        <%= @prospect.created_at.strftime("%m/%d/%Y") %>, last updated on
        <% if !@prospect.comments.last.nil? %>
          <% if @prospect.comments.last.updated_at > @prospect.updated_at %>
        	  <%= @prospect.comments.last.updated_at.strftime("%m/%d/%Y") %></em></p>
          <% else %>
        	  <%= @prospect.updated_at.strftime("%m/%d/%Y") %></em></p>
          <% end %>
        <% else %>
        	<%= @prospect.updated_at.strftime("%m/%d/%Y") %></em></p>
    		<% end %>

  		</div>
    </div>

  </div>
  <div class="prospect-show">
    
    <div class="row">
      <div class="col-md-5">
        <Strong><%= @prospect.organization %></Strong><br>
        Address: <em><%= @prospect.street_address %></em><br>
        Address2: <em><%= @prospect.address2 %></em><br>
        City/State: <em><%= @prospect.city %>, <%= @prospect.state %> <%= @prospect.zip %></em>
      </div>
      <div class="col-md-7">
        <br>    
      	Phone: <em><%= @prospect.phone %></em><br>
      	Website: <em><%= link_to @prospect.website, "http://" + @prospect.website, target: "_blank" %></em><br>
      	Employees: <em><%= @prospect.employees %></em>
  	  </div>
  	</div>
    <br>
    <br>
    <div class="row">
      <div class="col-md-5">
        <strong>Contact 1</strong><br>
        Name: <em><%= @prospect.contact1_first_name %> <%= @prospect.contact1_last_name %></em><br>
        Title: <em><%= @prospect.contact1_title %></em><br>
        Phone: <em><%= @prospect.contact1_phone %></em><br>
        Mobile: <em><%= @prospect.contact1_mobile %></em><br>
        Email: <%if !@prospect.contact1_email.nil? %>
                  <em><%= link_to @prospect.contact1_email, "mailto:" + @prospect.contact1_email %></em>
                <% end %>
                <br>
      </div>
      <div class="col-md-5">
        <strong>Contact 2</strong><br>
        Name: <em><%= @prospect.contact2_first_name %> <%= @prospect.contact2_last_name %></em><br>
        Title: <em><%= @prospect.contact2_title %></em><br>
        Phone: <em><%= @prospect.contact2_phone %></em><br>
        Mobile: <em><%= @prospect.contact2_mobile %></em><br>
        Email: <%if !@prospect.contact2_email.nil? %>
                <em><%= link_to @prospect.contact2_email, "mailto:" + @prospect.contact2_email %></em>
              <% end %>
            <br>
      </div>
      <div class="col-md-2">
		    <%= link_to "Edit & Update", edit_prospect_path(@prospect), class: "btn btn-warning btn-sm" %>
  	  </div>      
  	</div>
  	<br>
  	<br>
    <div class="row">
      <div class="col-md-12">Prospect Notes: <em><%= @prospect.prospect_note %></em></div>
    </div>
    <br>
    
   	      <%= render 'prospects/hcs_show' %>
   	      
   	      <%= render 'prospects/pay_show' %> 

	</div>
	
  <div class="panel-footer">
		<%= link_to "Back", prospects_path, class: "btn btn-beige btn-sm" %>
		<%= link_to "Delete", prospect_path(@prospect), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  </div>	

</div>